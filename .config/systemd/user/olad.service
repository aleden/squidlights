[Unit]
Description=Open Lighting Architecture

[Service]
ExecStart=/sbin/start-stop-daemon --start --make-pidfile --pidfile %h/build/olad.pid --exec /usr/local/bin/olad -- --syslog --log-level 3 --config-dir %h/.ola
PIDFile=%h/build/olad.pid
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
